<%if @scroll %>
  $('.add-posts-here').append("<%= j render 'entries/index' %>");
  <% if @entries.next_page %>
    $('.pagination').replaceWith("<%= j render partial: 'partials/paginate', locals: {entries: @entries}%>");
  <% else %>
    $(window).off('scroll');
    $('.pagination').remove();
  <% end %>
<%end%>