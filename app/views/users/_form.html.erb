<%=form_for :user, url: users_path, method: :post do |f|%>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%=f.label :email, for: 'email', class: "mdl-textfield__label" %>
      <%=f.text_field :email, class: "mdl-textfield__input" %>
    </div><br>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%=f.label :password, for: 'password', class: "mdl-textfield__label" %>
      <%=f.password_field :password, class: "mdl-textfield__input" %>
    </div><br>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%=f.label :password_confirmation, for: 'password_confirmation', class: "mdl-textfield__label" %>
      <%=f.password_field :password_confirmation, class: "mdl-textfield__input" %>
    </div>
    <br>
      <%=f.submit (current_user ? :'Edit User' : :'Sign Up!'), class: "mdl-button mdl-js-button mdl-button--flat mdl-button--accent sign-in-button"%>
<%end%>


