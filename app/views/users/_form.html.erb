<%=form_for :user, url: users_path, method: :post do |f|%>
  <%=f.label :email %>
  <%=f.text_field :email %>
  <%=f.label :password %>
  <%=f.password_field :password %>
  <%=f.label :password_confirmation %>
  <%=f.password_field :password_confirmation %>
  <%=f.submit current_user ? :'Edit User' : :'Sign Up'%>
<%end%>