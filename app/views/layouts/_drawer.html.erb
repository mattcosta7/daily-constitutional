
<div class="mdl-layout__drawer">

  <span class='site-title'>
    <%=link_to 'Daily Constitutional', root_path, class: 'mdl-layout-title' %>
  </span>
  <% if current_user %>
  <div class='drawer-cell'>
    <%=form_for :blog, url: blogs_path, method: :post  do |f|%>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%=f.label :'RSS Feed URL', class: "mdl-textfield__label"%>
      <%=f.text_field :url, class: "mdl-textfield__input"%>
      </div>
      <%=f.submit :'Add Feed', class: "mdl-button mdl-js-button mdl-button--raised mdl-button--accent"%>
  <%end%>
  </div>
  <%=render @user if @user%>
  <%=link_to "Edit", edit_user_path(current_user) if current_user && @user == current_user%>
  <div class='drawer-cell'>
    <%=render 'partials/weather'if @user%>
  </div>
  <div class='drawer-cell'>
    <%=render 'partials/mta' if @tStatus %>
  </div>
  <div class='drawer-cell drawer-cell-todo'>
    <%=render 'partials/todos' if current_user%>
  </div>
  <div class='drawer-cell'>
    <ul>
      <h5>Feeds</h5>
        <%current_user.blogs.each do |blog|%>
          <%=blog.url%>
        <%end%> 
  </div>
<%else%>
  <p>Sign In For All The Things</p>
<%end%>
</div>
