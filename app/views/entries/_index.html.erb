<div class='user-feeds'>
  <ul class='mdl-list'>
    <%@entries.each do |entry|%>
      <li class='mdl-list__item '>
        <div class='star-button'>
          <%=render partial: 'entries/star_button', locals: {entry: entry}%>
        </div> 
        <div class=' entry-unhider'>
          <span><%=entry.published.strftime('%A, %D %l:%M %p') if entry.published%></span>
          <span class='mdl-list__item-primary-content article-title'><%= entry.title %></span>
          <span class='article-url mdl-list__item-secondary-content'><%= entry.blog.url %></span>
          <span class='blog-entry-content' style="display:none;">
          <%=entry.content.html_safe%>
          </span>
        </div>
      </li>
    <%end%>
  </ul>
</div>

