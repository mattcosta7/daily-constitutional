<li class='mdl-list__item mdl-list__item--two-line to-do-list-item'>
  <div class='star-button'>
    <%=render partial: 'entries/star_button', locals: {entry: entry}%>
  </div> 
  <div class=' entry-unhider'>
    <span>
      <%=entry.blog.categories.map {|x| x.title}.join(', ') %> | <%=entry.published.strftime('%A, %D %l:%M %p') if entry.published%>
    </span>
    <span class='mdl-list__item-primary-content article-title'>
      <%= entry.title %> : <%=entry.blog.categories.map {|x| x.title}.join(', ') %>
      <span class='article-url mdl-list__item-sub-title '>
        <%= entry.blog.url %>
      </span>
    </span>
    <span class='blog-entry-content' style="display:none;">
      <%=entry.content.html_safe%>
    </span>
  </div>
</li>